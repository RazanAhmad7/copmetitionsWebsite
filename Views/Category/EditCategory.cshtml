@model CompetitionsWebsite.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "لوحة التحكم - إضافة قسم جديد";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        /* نفس تصميم صفحة الأسئلة */
        .admin-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .admin-content {
            background: var(--white);
            padding: 2rem;
            border-radius: 8px;
            box-shadow: var(--shadow);
        }

        .form-group {
            display: grid;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

            .form-group label {
                font-weight: bold;
                color: var(--text-color);
            }

            .form-group input,
            .form-group textarea {
                padding: 0.8rem;
                border: 2px solid var(--primary-color);
                border-radius: 4px;
                font-size: 1rem;
            }

            .form-group textarea {
                min-height: 100px;
                resize: vertical;
            }

        .form-actions {
            display: flex;
            gap: 1rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            background: var(--primary-color);
            color: var(--white);
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-cancel {
            background: #ff4444;
        }

        .toast {
            visibility: hidden;
            min-width: 200px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            border-radius: 8px;
            padding: 16px;
            position: fixed;
            z-index: 9999;
            top: 30px;
            right: 30px;
            font-size: 16px;
            opacity: 0;
            transition: opacity 0.5s ease-in-out, visibility 0.5s;
        }

            .toast.show {
                visibility: visible;
                opacity: 1;
            }
    </style>
</head>
<body>
    <main>
        <div class="admin-container">
            <div class="admin-header">
                <h2>تعديل القسم</h2>
                <button asp-action="Dashboard" asp-controller="Admin" class="btn">عودة إلى الرئيسية</button>
            </div>

            <div class="admin-content">
                <form id="myform" method="post">

                    <div class="form-group">
                        <label for="Name">اسم القسم</label>
                        <input type="text" id="Name" asp-for="Name" required />
                    </div>

                    <div class="form-group">
                        <label for="Description">وصف القسم</label>
                        <textarea id="Description" asp-for="Description" required></textarea>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn">حفظ القسم</button>
                        <button type="button" class="btn btn-cancel" onclick="history.back();">إلغاء</button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer>
        <p>جميع الحقوق محفوظة © @DateTime.Now.Year</p>
    </footer>
    <div id="toast" class="toast">تم حفظ القسم بنجاح!</div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('myform');
            const toast = document.getElementById('toast');

            form.addEventListener('submit', function (e) {
                e.preventDefault();
                const id = @Model.Id;
                const name = document.getElementById('Name').value;
                const description = document.getElementById('Description').value;

                fetch('/Category/EditCategory', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({ Id: id, Name: name, Description: description })
                })
                    .then(response => {
                        if (!response.ok) throw new Error('حدث خطأ أثناء حفظ القسم');
                        return response.json();
                    })
                    .then(data => {
                        if (data.success) {
                            showToast('تم حفظ القسم بنجاح!');
                            setTimeout(() => {
                                window.location.href = '/Admin/Dashboard?tab=categories';
                            }, 1500);
                        }
                    })
                    .catch(error => {
                        showToast('حدث خطأ أثناء حفظ القسم');
                    });
            });

            function showToast(message) {
                toast.textContent = message;
                toast.classList.add('show');
                setTimeout(() => {
                    toast.classList.remove('show');
                }, 2000);
            }
        });
    </script>


</body>
</html>
