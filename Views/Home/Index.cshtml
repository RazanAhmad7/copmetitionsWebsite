@model List<CompetitionsWebsite.Models.Category>
@{
    ViewData["Title"] = "مسابقات تعليمية إسلامية";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="main-nav">
            <div class="logo">
                <h1>مسابقات تعليمية</h1>
            </div>
            <div class="nav-links">
                <a href="@Url.Action("Index", "Home")" class="active">الرئيسية</a>
                <a href="@Url.Action("Login", "Auth")">تسجيل الدخول</a>
                <a href="@Url.Action("Profile", "Profile")">الملف الشخصي</a>
            </div>
        </nav>
    </header>

    <main>
        <section class="hero">
            <h2>مرحباً بك في منصة المسابقات التعليمية</h2>
            <p>اختبر معرفتك الإسلامية من خلال مجموعة متنوعة من المسابقات</p>
        </section>

        <section class="competitions-grid">
            @foreach (var category in Model)
            {
                <div class="competition-card">
                    <i class="fas fa-landmark"></i> <!-- You can customize the icon based on the category -->
                    <h3>@category.Name</h3>
                    <p>@category.Description</p>
                    <a href="@Url.Action("ChooseDifficulty", "Questions", new { categoryId = category.Id })" class="btn">ابدأ المسابقة</a>
                </div>
            }
        </section>

    </main>

    <footer>
        <p>جميع الحقوق محفوظة © @DateTime.Now.Year</p>
    </footer>

    <script src="~/js/main.js"></script>
</body>
</html>